{
  "name": "@binar-semicolon/api",
  "version": "0.0.0",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsup --watch . --onSuccess \"node dist/cli.js\"",
    "build": "prisma generate --generator client && tsup --experimental-dts",
    "postinstall": "patch-package",
    "vercel-build": "prisma migrate dev && tsup",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint app/",
    "format:write": "prettier --write \"**/*.{js,mjs,cjs,ts,json,md}\" && prisma format",
    "format:check": "prettier --check \"**/*.{js,mjs,cjs,ts,json,md}\" && prisma format && git diff --exit-code prisma/schema.prisma"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./cli": "./dist/cli.js"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.15.0",
    "@semicolon/api": "file:.",
    "@trpc/server": "^11.0.0-rc.403",
    "chalk": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "figures": "^6.1.0",
    "lodash": "^4.17.21",
    "superjson": "^2.2.1",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.23.8"
  },
  "overrides": {
    "trpc-openapi": {
      "@trpc/server": "$@trpc/server"
    }
  },
  "devDependencies": {
    "trpc-openapi": "^1.2.0",
    "patch-package": "^8.0.0",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.4.0",
    "@microsoft/api-extractor": "^7.47.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/cors": "^2.8.17",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.17.5",
    "@types/node": "^20.14.2",
    "@types/swagger-ui-express": "^4.1.6",
    "eslint": "^8.57.0",
    "prettier": "^3.3.2",
    "prisma": "^5.15.0",
    "tsup": "^8.0.2",
    "tsx": "^4.15.4",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.13.0",
    "vercel": "^34.2.7",
    "zod-prisma-types": "^3.1.8"
  }
}
